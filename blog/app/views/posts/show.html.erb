
<p id="notice"><%= notice %></p>

<p id="title">
  
  <strong ><%= @post.title %></strong>
</p>
<p style="font-size: 12px; text-align: center">Posted: <%= @post.created_at%></p>
<p style="font-size: 12px; text-align: center">Updated: <%= @post.updated_at%></p>
<div class="content_div">
  <p id="post">
  
      <%= @post.content %>
  </p>
</div>
<div id="show_button">
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
</div>